<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="../style/calendrier.css" type="text/css" />
        <link rel="stylesheet" href="../style/bootstrap-3.3.4-dist/css/bootstrap.css" type="text/css" />
        <title>Calendrier</title>
    </head>
    <body>
      
    <div class="col-md-2"></div>
    
    <div class="col-md-8">
    
        {% include 'menu.twig' %}
      
        <div id="entete">
        {% if session %}
          <h1 class="text-center">Bonjour {{session}}</h1>
        {% else %}
          <h1 class="text-center">Calendrier en ligne</h1>
        {% endif %}
    
    </div>
    <div id="contenu">

        {% if error %}
        <div class="alert alert-danger" role="alert"><p class="error">Erreurâ€¯: {{ error }}</p></div>
        {% endif %}

        <button id="previous" class="btn btn-default btn-block"> <= semaine precedente </button>
        <button id="next" class="btn btn-default btn-block"> semaine suivante => </button>
        
        
        </div>
        
        {% if user %}
          <input type="hidden" id="id_user" name="id_user" value="{{user}}"/>
        {% endif %}
        
        <div id="calendrier">

                <script src="script/calendrier.js"></script>

        </div>
        
    </div>
        
         
         </table>
       
      </div>
      
      <div class="col-md-2"></div>
         
      <div class="modal fade">
        <div class="modal-dialog">
          <div class="modal-content">
            
            <div class="modal-header">
              <h4 class="modal-title">Ajout d'evenement :</h4>
            </div>
            
            <div class="modal-body">
                
              <form class="addEvent" id='formulaire' method="POST">
                  
                  <table class="eventForm">
                        <tr>
                          <th>Titre de l'evenement:</th>
                          <td> <input type="text" id="titre" name="titre"/> </td>
                        </tr>
                      
                        <tr>
                          <th>Description:</th>
                          <td> <textarea id="description" name="description"  > </textarea> </td>
                        </tr>
                        
                        <tr>
                          <th>Date de debut:</th>
                          <td> <input onFocus="javascript: this.blur()" type="text" id="date_debut" name="date_debut" value=""/> </td>
                        </tr>
                        
                        <tr>
                          <th>Heure de fin:</th>
                          <td><select id="heure_fin" name="heure_fin"></select> <select id="min_fin" name="min_fin"><option value="00">00</option><option value="30">30</option></select></td>
                        </tr>
                      
                        <tr>
                          <td></td>
                          <td> <input class="btn btn-default btn-sm" type="submit" id='valider' value="Valider"/></td>
                        </tr>
                  </table>
                  
                  <input type="hidden" id="jour" name="jour" value=""/>
                  <input type="hidden" id="online" name="online" value="{{ session }}"/>
              </form>
            </div>

          </div>
        </div>
      </div>
         
    <script type="text/javascript" src="script/jquery-2.1.3.min.js"></script>
    <script type="text/javascript" src="style/bootstrap-3.3.4-dist/js/bootstrap.min.js"> </script>
    <script type="text/javascript" src="style/bootstrap-3.3.4-dist/js/bootstrap-dialog.js"></script>
         
    </body>
    
</html>